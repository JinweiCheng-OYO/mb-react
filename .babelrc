// .babelrc
{
  "presets":["@babel/preset-react",
    ["@babel/preset-env", {
      "target": {
        "browsers": [
          "> 1%",
          "last 2 versions"
        ]
      },
      "useBuiltIns": "usage",
      "corejs": 3
    }]
  ],
  "plugins": [
    "@babel/plugin-syntax-dynamic-import",
    "react-hot-loader/babel",
    [
      "@babel/plugin-transform-runtime"
    ]
  ]
}